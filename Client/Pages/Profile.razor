@page "/profile"
@using BlazorApp.Client.Services
@using BlazorApp.Client.Models
@inject AuthenticationService AuthService
@inject UserProfileService ProfileService

<PageTitle>Profile</PageTitle>

<h1>User Profile</h1>

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (isAuthenticated)
{
    <div class="profile-container">
        <div class="profile-section">
            <h3>Raw Authentication Data</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Property (JSON)</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>identityProvider</td>
                        <td>@(user.IdentityProvider ?? "(null)")</td>
                    </tr>
                    <tr>
                        <td>userId</td>
                        <td>@(user.UserId ?? "(null)")</td>
                    </tr>
                    <tr>
                        <td>userDetails</td>
                        <td>@(user.UserDetails ?? "(null)")</td>
                    </tr>
                    <tr>
                        <td>userRoles</td>
                        <td>@(user.UserRoles != null ? $"[{string.Join(", ", user.UserRoles)}]" : "(null)")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="profile-section">
            <h3>Microsoft Graph Profile Data</h3>
            @if (profile != null)
            {
                <dl class="profile-info">
                    <dt>Display Name:</dt>
                    <dd>@(profile.DisplayName ?? "(not available)")</dd>

                    <dt>Email:</dt>
                    <dd>@(profile.Email ?? "(not available)")</dd>

                    <dt>User ID (from Graph):</dt>
                    <dd>@(profile.Id ?? "(not available)")</dd>
                </dl>
            }
            else if (profileError != null)
            {
                <div class="alert alert-danger">
                    <strong>Error loading profile:</strong> @profileError
                </div>
            }
            else
            {
                <p><em>Loading profile from Microsoft Graph...</em></p>
            }
        </div>

        @if (user != null)
        {
            <div class="profile-section">
                <h3>Static Web Apps Authentication Data</h3>
                <dl class="profile-info">
                    <dt>User ID (from SWA):</dt>
                    <dd>@user.UserId</dd>

                    <dt>User Details:</dt>
                    <dd>@user.UserDetails</dd>

                    <dt>Identity Provider:</dt>
                    <dd>@user.IdentityProvider</dd>
                </dl>
            </div>
        }

        @if (user.UserRoles != null && user.UserRoles.Any())
        {
            <div class="profile-section">
                <h3>Roles</h3>
                <ul class="role-list">
                    @foreach (var role in user.UserRoles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        }


    </div>
}
else
{
    <p>Not authenticated. Please <a href="/.auth/login/aad">login</a> to view your profile.</p>
}

@code {
    private ClientPrincipal? user;
    private UserProfile? profile;
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private string? profileError;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Check if user is authenticated and get SWA auth data
            user = await AuthService.GetUserInfoAsync();
            isAuthenticated = user != null;

            // If authenticated, fetch profile from Graph API
            if (isAuthenticated)
            {
                try
                {
                    profile = await ProfileService.GetUserProfileAsync();
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error loading user profile: {ex.Message}");
                    profileError = ex.Message;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in Profile page: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
