@page "/profile"
@using BlazorApp.Client.Services
@using BlazorApp.Client.Models
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject UserProfileService ProfileService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Profile</PageTitle>

<h1>User Profile</h1>

<AuthorizeView>
    <Authorized>
        <div class="profile-container">
            <div class="profile-section">
                <h3>Authentication State</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Is Authenticated</td>
                            <td>@context.User.Identity?.IsAuthenticated</td>
                        </tr>
                        <tr>
                            <td>Authentication Type</td>
                            <td>@(context.User.Identity?.AuthenticationType ?? "(not available)")</td>
                        </tr>
                        <tr>
                            <td>Name</td>
                            <td>@(context.User.Identity?.Name ?? "(not available)")</td>
                        </tr>
                        <tr>
                            <td>Claims Count</td>
                            <td>@context.User.Claims.Count()</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="profile-section">
                <h3>Microsoft Graph Profile Data</h3>
                @if (isLoading)
                {
                    <p><em>Loading profile from Microsoft Graph...</em></p>
                }
                else if (profile != null)
                {
                    <dl class="profile-info">
                        <dt>Display Name:</dt>
                        <dd>@(profile.DisplayName ?? "(not available)")</dd>

                        <dt>Given Name:</dt>
                        <dd>@(profile.GivenName ?? "(not available)")</dd>

                        <dt>Surname:</dt>
                        <dd>@(profile.Surname ?? "(not available)")</dd>

                        <dt>Email (Mail):</dt>
                        <dd>@(profile.Mail ?? "(not available)")</dd>

                        <dt>User Principal Name:</dt>
                        <dd>@(profile.UserPrincipalName ?? "(not available)")</dd>

                        <dt>Job Title:</dt>
                        <dd>@(profile.JobTitle ?? "(not available)")</dd>

                        <dt>Office Location:</dt>
                        <dd>@(profile.OfficeLocation ?? "(not available)")</dd>

                        <dt>Mobile Phone:</dt>
                        <dd>@(profile.MobilePhone ?? "(not available)")</dd>

                        @if (profile.BusinessPhones != null && profile.BusinessPhones.Any())
                        {
                            <dt>Business Phones:</dt>
                            <dd>@string.Join(", ", profile.BusinessPhones)</dd>
                        }
                    </dl>
                }
                else if (profileError != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error loading profile:</strong> @profileError
                    </div>
                }
                else
                {
                    <p><em>No profile data available.</em></p>
                }
            </div>

            <div class="profile-section">
                <h3>User Claims</h3>
                @if (context.User.Claims.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in context.User.Claims)
                            {
                                <tr>
                                    <td>@claim.Type</td>
                                    <td>@claim.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p><em>No claims available.</em></p>
                }
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <p>Not authenticated. Please <a href="authentication/login">login</a> to view your profile.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private UserProfile? profile;
    private bool isLoading = true;
    private string? profileError;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Fetch profile from Microsoft Graph via MSAL
            profile = await ProfileService.GetUserProfileAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user profile: {ex.Message}");
            profileError = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}
